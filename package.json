{
  "name": "piadgs-library",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "author": "Simon Eddy <simon@simoneddy.com.au>",
  "description": "PIADGS Library App",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.1",
    "electron-squirrel-startup": "^1.0.0",
    "knex": "^0.95.4",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-confirm-alert": "^2.7.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-modal": "^3.13.1",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-transition-group": "^4.4.1",
    "redux": "^4.1.0",
    "redux-observable": "^2.0.0",
    "redux-thunk": "^2.3.0",
    "rxjs": "^6.6.7",
    "sqlite3": "5.0.0",
    "styled-components": "^5.3.0",
    "styled-theming": "^2.2.0",
    "web-vitals": "^1.1.1"
  },
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dv": "electron .",
    "dev": "concurrently \"BROWSER=none npm run start\" \"wait-on tcp:3000 && electron-forge start\"",
    "tailwind": "tailwind build src/shared/styles/tailwind.src.css -o src/shared/styles/tailwind.css",
    "models": "nodemon models.js",
    "idev": "nodemon setup/index.js",
    "db:up": "knex migrate:latest",
    "db:down": "knex migrate:rollback --all",
    "db:fresh": "npm run db:down && npm run db:up",
    "package": "react-scripts build && electron-forge package",
    "make": "react-scripts build && electron-forge make"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "bcrypt": "^5.0.1",
    "concurrently": "^6.0.2",
    "electron": "^12.0.6",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^3.2.3",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "nodemon": "^2.0.7",
    "papaparse": "^5.3.1",
    "tailwindcss": "^2.1.2",
    "unimported": "^1.19.0",
    "wait-on": "^5.3.0"
  },
  "build": {
    "appId": "com.piadgs.libraryapp",
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "assets/icon.icns"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icon.icns",
        "name": "PIADGS Library"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
